page {
    background-color: #fff;
}

.page,page {
    height: 100%;
}

.page {
    padding-top: 128rpx;
}

.page.ipx {
    padding-top: 176rpx;
}

.red-dot {
    width: 20rpx;
    height: 20rpx;
    background-color: red;
    border-radius: 50%;
    display: inline-block;
}

.back-img {
    width: 24rpx;
    height: 40rpx;
    padding: 65rpx 40rpx 0;
}

.back-img.ipx {
    padding-top: 108rpx;
}

.flex {
    display: flex;
    align-items: center;
}

.flex-1 {
    flex-grow: 1;
}

.column {
    flex-direction: column;
}

.page-bg {
    position: fixed;
    z-index: -99;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
}

.center {
    text-align: center;
}

.bold {
    font-weight: 700;
}

.white {
    color: #fff;
}

button:after,button:before {
    display: none;
}

button {
    background: transparent;
    margin: 0;
    padding: 0;
    border-radius: 20rpx;
}

.flash-btn {
    width: 360rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    background-color: #fff;
    font-size: 36rpx;
}

.flash-bg {
    background: url(https://wxflag.afunapp.com/flash/flash_bg.png);
    background-size: 750rpx 972rpx;
    background-position: top;
    background-color: #000;
    background-repeat: no-repeat;
}

.flash-bg.ipx {
    background-position: center 48rpx;
}

.fz-30 {
    font-size: 30rpx;
}

.fz-32 {
    font-size: 32rpx;
}

.fz-48 {
    font-size: 48rpx;
}

.official {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.bg-black {
    background-color: #000;
}

.full-w {
    width: 100%;
}

.full-h {
    height: 100%;
}

.back,page {
    width: 100%;
    height: 100%;
}

.back {
    z-index: -1;
    position: fixed;
    top: 0;
}

.buttonHover {
    opacity: .8;
    transform: scale(1.1);
}