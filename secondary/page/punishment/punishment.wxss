.punishment-wrap {
    position: absolute;
    top: 9%;
    left: 0;
    width: 100%;
    height: calc(100% - 240rpx);
    justify-content: center;
}

.punishment-wrap.no-ad {
    height: 100%;
}

.back-img {
    position: fixed;
    left: 0;
    top: 0;
}

.light {
    width: 332rpx;
    height: 368rpx;
    margin-top: 46rpx;
}

.title {
    font-size: 34rpx;
    color: #fff;
    margin-top: -72rpx;
}

.types {
    flex-wrap: wrap;
    justify-content: center;
}

.envelope-img {
    width: 264rpx;
    height: 330rpx;
}

.drink-img,.truth-img {
    width: 268rpx;
    height: 330rpx;
}

.risk-img {
    width: 272rpx;
    height: 330rpx;
}

@-webkit-keyframes yaohuang {
    0% {
        transform: scale(.97,.97);
    }

    to {
        transform: scale(1.03,1.03);
    }
}

@keyframes yaohuang {
    0% {
        transform: scale(.97,.97);
    }

    to {
        transform: scale(1.03,1.03);
    }
}

.bottom-wrap {
    margin-top: 30rpx;
    text-align: center;
    position: relative;
}

.bottom-wrap view {
    font-size: 24rpx;
    color: #4a4a4a;
}

.bottom-wrap.hide {
    z-index: -1;
}

.close-select {
    width: 44rpx;
    height: 44rpx;
    padding: 20rpx;
}

.again {
    width: 342rpx;
    height: 128rpx;
    animation: yaohuang .8s linear infinite;
    animation-direction: alternate;
    transform-origin: 50% 50%;
}

.measure-wrap {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding-top: 290rpx;
    background-color: rgba(0,0,0,.9);
}

.measure {
    padding-top: 30rpx;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    min-height: 170rpx;
}

.measure-content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%,-50%,0);
    z-index: 2;
    width: 69%;
}

.wrap-bg {
    width: 594rpx;
    height: 530rpx;
    position: relative;
}

@-webkit-keyframes jackInTheBox {
    0% {
        opacity: 0;
        transform: scale(.1) rotate(30deg);
        transform-origin: center bottom;
    }

    50% {
        transform: rotate(-10deg);
    }

    70% {
        transform: rotate(3deg);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes jackInTheBox {
    0% {
        opacity: 0;
        transform: scale(.1) rotate(30deg);
        transform-origin: center bottom;
    }

    50% {
        transform: rotate(-10deg);
    }

    70% {
        transform: rotate(3deg);
    }

    to {
        opacity: 1;
        transform: scale(1);
    }
}

.wrap-bg.show {
    animation: jackInTheBox .5s;
    animation-fill-mode: forwards;
}

.change {
    width: 174rpx;
    line-height: 70rpx;
    margin: 0 auto;
    font-size: 32rpx;
    background-color: #fff;
    border-radius: 35rpx;
    text-align: center;
    box-shadow: 0 5rpx 10rpx rgba(0,0,0,.1);
}

.surrender,.voice {
    color: #fff;
    font-size: 26rpx;
    width: 210rpx;
    font-weight: 700;
    text-align: center;
    margin: 20rpx auto 0;
    border-bottom: 1px solid #fff;
}

.title-img {
    width: 426rpx;
    height: 60rpx;
}