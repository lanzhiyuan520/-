.progress-main {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%,-50%,0);
    width: 646rpx;
    height: 1226rpx;
    background: linear-gradient(270deg,#68cbea,#53a1ff);
    box-shadow: 0 0 40rpx 2rpx #56a8fc;
    border-radius: 40rpx;
    border: 12rpx solid #fff;
}

.progress-main.rotate {
    transform: translate3d(-50%,-50%,0) rotate(180deg);
}

.progress-main.pause {
    background: linear-gradient(1turn,#f2cf80,#eec082);
    box-shadow: 0 0 40rpx 2rpx rgba(245,197,91,.81);
}

.progress-main.skip {
    background: linear-gradient(180deg,#f99c92,#ffa696);
    box-shadow: 0 0 40rpx 2rpx rgba(255,135,135,.83);
}

.progress-main.right {
    background: linear-gradient(180deg,#83dc56,#a1df73);
    box-shadow: 0 0 40rpx 2rpx rgba(117,188,65,.84);
}

.end-img {
    top: 36rpx;
}

.end-img,.status-img {
    width: 68rpx;
    height: 68rpx;
    position: absolute;
    left: 36rpx;
}

.status-img {
    top: 136rpx;
    transform: rotate(-90deg);
}

.countdown-wrap,.playing-wrap {
    width: 1000rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%,-50%,0) rotate(-90deg);
}

.countdown-img {
    width: 108rpx;
    height: 130rpx;
}

.start-txt {
    width: 534rpx;
    height: 70rpx;
    margin-top: 82rpx;
}

.pause-txt,.skip-txt {
    width: 298rpx;
    height: 136rpx;
    margin-bottom: 20rpx;
}

.right-txt {
    width: 292rpx;
    height: 134rpx;
}

.words {
    font-size: 154rpx;
    line-height: 1.2;
}

.playing-countdown {
    width: 276rpx;
    line-height: 130rpx;
    background-color: hsla(0,0%,100%,.2);
    border-radius: 65rpx;
    margin: 36rpx auto 0;
    font-size: 76rpx;
}

.next-hint {
    margin-top: 44rpx;
    font-size: 42rpx;
}

.next-hint.right {
    color: #477c1d;
}

.next-hint.skip {
    color: #bd4545;
}

.end-title {
    width: 496rpx;
    height: 226rpx;
    position: relative;
    z-index: 2;
    transform: translateX(8rpx);
}

.result-wrap {
    background-color: #fff;
    border-radius: 40rpx;
    width: 582rpx;
    position: relative;
    z-index: 1;
    transform: translateY(-80rpx);
    box-sizing: border-box;
    padding-bottom: 40rpx;
}

.result-list {
    overflow-y: scroll;
    padding: 0 62rpx;
    -webkit-overflow-scrolling: touch;
}

.result-placeholder {
    width: 100%;
    height: 88rpx;
}

.result-item {
    margin-top: 56rpx;
}

.result-img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}

.result-words {
    color: #5cac39;
    font-size: 36rpx;
}

.strong {
    font-size: 46rpx;
    margin: 0 10rpx;
}

.btns {
    margin-top: 64rpx;
}

.btn-again,.btn-punishment {
    width: 316rpx;
    height: 130rpx;
}

.btn-punishment {
    margin-left: 26rpx;
}

.bottom-bar {
    width: 100%;
    height: 50rpx;
    display: block;
    position: fixed;
    left: 0;
    bottom: 0;
}