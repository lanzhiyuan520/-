.modal-wrap {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    z-index: 10000;
}

.modal-main {
    width: 486rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    background: #000;
    box-shadow: 0 0 78rpx 0 rgba(250,188,41,.5);
    border-radius: 30rpx;
    border: 4rpx solid #ffc53b;
}

.modal-main.review {
    padding-bottom: 52rpx;
}

.modal-title {
    color: #ffc53b;
    font-size: 36rpx;
    margin-top: 30rpx;
    text-align: center;
}

.modal-desc {
    margin-top: 26rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 42rpx;
}

.btn-unlock {
    font-size: 32rpx;
    border-radius: 40rpx;
    width: 324rpx;
    line-height: 72rpx;
    margin: 52rpx auto 0;
    text-align: center;
}

.btn-unlock,.remove-wrap {
    background-color: #ffc53b;
    font-weight: 700;
}

.remove-wrap {
    margin-top: 52rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    width: 486rpx;
    height: 94rpx;
    border-bottom-right-radius: 24rpx;
    border-bottom-left-radius: 24rpx;
}

.btn-remove {
    font-size: 36rpx;
    color: #000;
}

.price {
    font-size: 24rpx;
    color: #000;
    line-height: 1;
}

.think {
    position: fixed;
    left: 50%;
    top: calc(50% + 260rpx);
    transform: translateX(-50%);
    width: 200rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 32rpx;
    border: 4rpx solid #ffc53b;
    font-size: 30rpx;
    color: #ffc53b;
    background-color: #000;
    z-index: 10000;
}