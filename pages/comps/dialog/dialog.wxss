.dialog-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.8);
    z-index: 100;
}

.dialog-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    width: calc(100% - 192rpx);
    min-height: 300rpx;
    background-color: #fff;
    border-radius: 20rpx;
}

.close-img {
    width: 82rpx;
    height: 82rpx;
    position: absolute;
    left: 50%;
    bottom: -120rpx;
    transform: translateX(-50%);
}