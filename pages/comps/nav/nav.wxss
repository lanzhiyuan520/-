.nav {
    display: flex;
    position: fixed;
    top: 0;
    width: 100%;
    align-items: center;
    padding-top: 40rpx;
    z-index: 50;
    transition: top .3s;
}

.nav.ipx {
    padding-top: 88rpx;
}

.back {
    z-index: 100000;
    width: 100rpx;
    height: 88rpx;
    position: relative;
}

.back-img {
    position: absolute;
    height: 44rpx;
    width: 46rpx;
    top: 50%;
    left: 20rpx;
    transform: translateY(-50%);
}

.title {
    font-size: 42rpx;
    color: #fff;
    flex-grow: 1;
    text-align: center;
}

.right {
    width: 100rpx;
    height: 88rpx;
}