.container {
    position: relative;
}

.back {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
}

.head {
    position: relative;
}

.small {
    display: flex;
    position: absolute;
    top: 38rpx;
    right: 50rpx;
}

.small image {
    width: 150rpx;
    height: 120rpx;
    margin-left: 20rpx;
}

.user-info {
    display: flex;
    align-items: center;
    padding: 0 32rpx;
}

.avatar-bg {
    width: 131rpx;
    height: 145rpx;
    position: relative;
}

.user-avatar {
    overflow: hidden;
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
}

.user-name {
    font-size: 30rpx;
    /* font-weight: 700; */
    color: #fff;
}

.appList {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 40rpx 15rpx 0;
}

.appList image {
    width: 220rpx;
    height: 160rpx;
}