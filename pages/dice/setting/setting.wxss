.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

page {
    background-color: #eee;
}

text {
    color: #444;
}

.container {
    padding: 95rpx 55rpx;
    height: 100%;
}

.setting-item {
    position: relative;
    width: 600rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 60rpx;
}

.setting-title {
    top: -60rpx;
    left: 50rpx;
    font-size: 40rpx;
}

#dice-num,.setting-title {
    position: absolute;
    color: #fff;
}

#dice-num {
    top: 0rpx;
    left: 0rpx;
    text-align: center;
    line-height: 100rpx;
    width: 100%;
    height: 100%;
    font-size: 80rpx;
    z-index: 100;
    border-radius: 70rpx;
}

.btn-triangle {
    z-index: 1000;
    width: 115rpx;
    height: 115rpx;
}

.btn-triangle:active {
    opacity: .5;
}

.icon-diceCup {
    position: relative;
    bottom: 110rpx;
    width: 180rpx;
    height: 250rpx;
}

.shake-text {
    color: #fff;
    line-height: 80rpx;
}

.btn-back {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    top: 77rpx;
    left: 20rpx;
}