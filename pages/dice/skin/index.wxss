page {
    background-color: #1e1c34;
}

.videoImg {
    margin: 0 auto 20rpx;
}

.videoImg,.videoImg2 {
    display: block;
    width: 100%;
    height: 120rpx;
    padding-left: 45rpx;
}

.videoImg2 {
    margin: 50rpx auto 10rpx;
}

.con {
    flex-wrap: wrap;
    justify-content: space-evenly;
    padding-top: 25rpx;
}

.con,.con>view {
    display: flex;
}

.con>view {
    flex-direction: column;
    margin-bottom: 35rpx;
    padding-bottom: 15rpx;
    border-radius: 32rpx;
}

.con>view span {
    color: #aca8b7;
    font-size: 25rpx;
    text-align: center;
    line-height: 90rpx;
}

.diceSele image {
    position: absolute;
    top: 0;
    left: 0;
    width: 206rpx;
    height: 206rpx;
}

.diceSele text {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 20rpx;
    line-height: 35rpx;
    color: #dbdaea;
    font-size: 23rpx;
    border-radius: 0 12rpx 0 12rpx;
    background-color: #443f53;
}

.diceSele view {
    opacity: .5;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
}

.diceSele view:after {
    position: absolute;
    top: 50%;
    left: 50%;
    content: "";
    width: 56rpx;
    height: 56rpx;
    margin: -28rpx 0 0 -28rpx;
    background: url("data:image/png;base64,") 0 0 no-repeat;
    background-size: 100% 100%;
}

.con>view>view {
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    font-size: 27rpx;
}

.diceSele {
    overflow: hidden;
    position: relative;
    width: 206rpx;
    height: 206rpx;
    border-radius: 16rpx;
    border: 2rpx solid #443f53;
}

.diceSeleCol {
    border: 2rpx solid #f7ea84;
}

.diceSeleCol text {
    color: #401d00;
    background-color: #f7ea84;
}

.use-gift {
    display: flex;
    justify-content: space-between;
}

.exchange {
    color: #fba100;
    border: 2rpx solid;
    border-image: linear-gradient(146deg,#fdc400,#f98700) 1 1;
}

.exchange,.gift {
    height: 36rpx;
    width: 80rpx;
    text-align: center;
    line-height: 36rpx;
    white-space: nowrap;
}

.gift {
    color: #0078ff;
    border: 1px solid;
    border-image: linear-gradient(328deg,#0048ff,#00cbff) 1 1;
}

.buy-now {
    position: relative;
    background: linear-gradient(#382f72,#2b2563);
    border-radius: 25rpx;
    width: 161rpx;
    margin: 0 auto;
    padding-left: 25rpx;
    border: 1rpx solid #26244c;
}

.buy-now:after {
    position: absolute;
    top: 50%;
    left: 13rpx;
    content: "";
    width: 32rpx;
    height: 32rpx;
    margin-top: -16rpx;
    background: url("data:image/png;base64,") 0 0 no-repeat;
    background-size: 100% 100%;
}

.use-now {
    background-color: #131220;
    border-radius: 25rpx;
    border: 1rpx solid #38354a;
}

.use-now,.use-on {
    width: 186rpx;
    margin: 0 auto;
}

.use-on {
    background: linear-gradient(#382f72,#2b2563);
    border-radius: 25rpx;
    border: 1rpx solid #26244c;
}

.buy-all {
    width: 512rpx;
    height: 80rpx;
    background: linear-gradient(152deg,#fe743c,#ff2d1a 100%,#ff2d1a 0);
    box-shadow: 0 10rpx 20rpx 0 rgba(73,23,18,.3);
    border-radius: 42rpx;
    line-height: 80rpx;
    font-size: 16px;
    color: #fff;
}

.give-img {
    width: 426rpx;
    height: 400rpx;
}