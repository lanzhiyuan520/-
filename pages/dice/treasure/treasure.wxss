page {
    height: 100%;
}

.container {
    width: 92%;
    height: 77%;
    padding: 0 4%;
    color: #e3b252;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

::scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.title view {
    color: #000;
    font-size: 42rpx;
    font-weight: 600;
    line-height: 68rpx;
}

.title {
    margin-bottom: 20rpx;
}

.title text {
    color: #999;
    font-size: 32rpx;
}

.item-mou {
    margin-bottom: 70rpx;
    padding: 14rpx 12rpx;
    border-radius: 18rpx;
    border: 7rpx solid #e3b252;
}

.title-word {
    position: relative;
    width: 570rpx;
    height: 70rpx;
    margin: 0 auto;
}

.word,.wordBorder {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
}

.word {
    text-align: center;
    line-height: 70rpx;
    font-size: 36rpx;
    font-weight: 500;
}

.text2 {
    margin-top: 30rpx;
    padding: 12rpx 18rpx;
    border: 4rpx solid #e3b252;
    border-radius: 18rpx;
    font-size: 32rpx;
    line-height: 48rpx;
    letter-spacing: 6rpx;
}

.share {
    width: 100%;
    margin-bottom: 50rpx;
    color: #e3b252;
    border: 6rpx solid #e3b252;
}

ad {
    margin-bottom: 30rpx;
}